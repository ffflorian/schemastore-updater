{
  "author": "Florian Keller <github@floriankeller.de>",
  "bin": {
    "schemastore-updater": "dist/cli.js"
  },
  "dependencies": {
    "cli-interact": "0.1.9",
    "commander": "2.19.0",
    "fs-extra": "7.0.1",
    "json-schema-to-typescript": "6.1.3",
    "semver": "6.0.0",
    "simple-git": "1.110.0"
  },
  "devDependencies": {
    "@types/cli-interact": "0.1.0",
    "@types/fs-extra": "5.0.5",
    "@types/rimraf": "2.0.2",
    "@types/semver": "5.5.0",
    "cross-env": "5.2.0",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "logdown": "3.2.8",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "ts-node": "8.0.3",
    "tslint": "5.15.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.4.1"
  },
  "files": [
    "src",
    "settings.json"
  ],
  "license": "MIT",
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --project tsconfig.json --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "dist/index.js",
  "name": "schemastore-updater",
  "repository": "https://github.com/ffflorian/schemastore-updater.git",
  "scripts": {
    "build": "tsc",
    "clear": "rimraf dist",
    "dist": "yarn clear && yarn build",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix",
    "lint": "yarn lint:ts && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --project tsconfig.json",
    "prettier": "prettier --ignore-path .gitignore \"*.{json,md}\"",
    "start": "cross-env NODE_DEBUG='schemastore-updater/*' ts-node src/cli.ts",
    "test": "exit 0"
  },
  "version": "1.1.0"
}
