{
  "author": "Florian Keller <github@floriankeller.de>",
  "bin": {
    "schemastore-updater": "dist/cli.js"
  },
  "dependencies": {
    "commander": "5.0.0",
    "fs-extra": "9.0.0",
    "json-schema-to-typescript": "8.2.0",
    "jsonabc": "2.3.1",
    "semver": "7.2.1"
  },
  "devDependencies": {
    "@ffflorian/prettier-config": "0.0.6",
    "@ffflorian/tslint-config": "0.7.1",
    "@types/fs-extra": "8.1.0",
    "@types/jsonabc": "2.3.1",
    "@types/node": "~12",
    "@types/rimraf": "3.0.0",
    "@types/semver": "7.1.0",
    "cross-env": "7.0.2",
    "husky": "4.2.5",
    "lint-staged": "10.1.2",
    "logdown": "3.3.1",
    "prettier": "2.0.4",
    "rimraf": "3.0.2",
    "ts-node": "8.8.2",
    "tslint": "6.1.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.3.0",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": ">= 10.9"
  },
  "files": [
    "dist",
    "settings.json"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "GPL-3.0",
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "src/**/*.ts": [
      "tslint --project tsconfig.json --fix"
    ]
  },
  "main": "dist/index.js",
  "name": "schemastore-updater",
  "prettier": "@ffflorian/prettier-config",
  "repository": "https://github.com/ffflorian/schemastore-updater.git",
  "scripts": {
    "build": "tsc",
    "clear": "rimraf dist",
    "check-disabled": "yarn start check-disabled",
    "check-versions": "yarn start check-versions",
    "dist": "yarn clear && yarn build",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix",
    "lint": "yarn lint:ts && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --project tsconfig.json",
    "prettier": "prettier --ignore-path .gitignore \"*.{json,md}\"",
    "start": "cross-env NODE_DEBUG='schemastore-updater/*' ts-node src/cli.ts",
    "test": "exit 0",
    "update": "yarn start update"
  },
  "version": "2.0.0"
}
